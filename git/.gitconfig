# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = Eddie Harrison
	email = theeddieharrison@gmail.com
[color]
	ui = always
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
[alias]
	v  = version
	s  = status -s
	st = status
	df = diff
	dm = diff origin/master..HEAD

	bn      = symbolic-ref --short HEAD
	head    = rev-parse --short HEAD
	prev    = log --pretty=medium --abbrev-commit -1
	last    = log --pretty=format:\"%C(blue italic) %>(16)%ar %C(reset) %s\"
	history = log --pretty=format:\"%C(yellow bold) %h %C(reset) %C(blue italic) %>(16)%ar %C(reset) %C(green dim) %<(16)%aN %C(reset) %s\"
	grep2list = log --reverse --pretty=format:\"%h\" --grep 

	up   = !git pull origin $(git symbolic-ref --short HEAD)
	send = !git push origin $(git symbolic-ref --short HEAD)
	br   = branch
	cl   = clone
	co   = checkout
	cb   = checkout -b
	a    = add
	c    = commit --message
	cs   = commit --gpg-sign --message
	vc   = verify-commit
	fix-msg = commit --amend --gpg-sign
	fix-gpg = commit --amend --gpg-sign --no-edit

	alias = !(source ~/.dotfiles/git/aliases.sh && print_git_aliases)

	viz = log --oneline --graph --all --decorate
	release-report = log --pretty=format:\"%ad âˆ† %s\" master..development
	rr-short = log --pretty=format:\"%s\" master..development
[core]
	editor = nano
[diff "sopsdiffer"]
	textconv = sops -d
